<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <servlet>
    <servlet-name>CrimeManager</servlet-name>
    <servlet-class>com.crime.management.CrimeManager</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CrimeManager</servlet-name>
    <url-pattern>/CrimeManager</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.crime.management.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>com.crime.management.SignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>/SignupServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CrimeServlet</servlet-name>
    <servlet-class>CrimeServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CrimeServlet</servlet-name>
    <url-pattern>/CrimeServlet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PoliceLoginServlet</servlet-name>
    <servlet-class>com.crime.management.PoliceLoginServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>PoliceLoginServlet</servlet-name>
    <url-pattern>/PoliceLoginServlet</url-pattern>
  </servlet-mapping>


</web-app>
